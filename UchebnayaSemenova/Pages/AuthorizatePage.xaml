<Page x:Class="UchebnayaSemenova.Pages.AuthorizatePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UchebnayaSemenova.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthorizatePage">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0 0 0 4">Ввведите свой ID</TextBlock>
            <TextBox x:Name="InputTB"></TextBox>
            <Button x:Name="EnterBtn" Width="100" Height="40" Click="EnterBtn_Click"> Войти</Button>
        </StackPanel>
    </Grid>
</Page>
